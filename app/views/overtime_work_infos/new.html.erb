<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="mb-3">
      <%= form_with url: '/overtime_work_infos', scope: :overtime_work_info do |f| %>
        <%= f.label :job_num, {class: 'form-label'} %>
        <%= f.text_field :job_num, :class => 'form-control' %>

        <%= f.label :対象者, {class: 'form-label'} %>
        <%= f.select :user_id, @users, include_blank: "対象者を選択してください" %><br>

        <%= f.label :開始時間, {class: 'form-label'} %>
        <%= f.datetime_select "start_time_list[]", :class => 'form-control' %><br>

        <%= f.label :終了時間, {class: 'form-label'} %>
        <%= f.datetime_select "end_time_list[]", :class => 'form-control' %><br>

        <%= f.label :理由, {class: 'form-label'} %>
        <%= f.text_field :reason, :class => 'form-control' %>

        <%= f.label :承認者, {class: 'form-label'} %>
        <%= f.select :leader_user_id, @admin_users, include_blank: "承認者を選択して下さい" %><br>

        <%= f.submit "申請", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>