<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="mb-3">
      <%= form_with url: '/overtime_work_infos', scope: :overtime_work_info do |f| %>
        <div class="form-group">
          <%= f.label :job_num, "ジョブ番号", class: 'form-label' %>
          <%= f.text_field :job_num, class: 'form-control', placeholder: 'ジョブ番号を入力してください' %>
        </div>

        <% (1..2).each do |i| %>
          <% user_id = "user_id_#{i}".to_sym %>

          <div class="form-group">
            <%= f.label user_id, "対象者", class: 'form-label' %>
            <%= f.select user_id, @users, { include_blank: "対象者を選択してください" }, class: 'form-control' %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :start_time, "開始時間", class: 'form-label' %>
          <%= f.datetime_select "start_time_list[]", { class: 'form-control' } %>
        </div>

        <div class="form-group">
          <%= f.label :end_time, "終了時間", class: 'form-label' %>
          <%= f.datetime_select "end_time_list[]", { class: 'form-control' } %>
        </div>

        <div class="form-group">
          <%= f.label :reason, "理由", class: 'form-label' %>
          <%= f.text_field :reason, class: 'form-control', placeholder: '理由を入力してください' %>
        </div>

        <div class="form-group">
          <%= f.label :leader_user_id, "承認者", class: 'form-label' %>
          <%= f.select :leader_user_id, @admin_users, { include_blank: "承認者を選択して下さい" }, class: 'form-control' %>
        </div>

        <%= f.submit "申請", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>